<div class="col-sm-12 col-md-6 col-lg-4 mt-3">
    <div class="project-card rounded pb-3 h-100">
        <div class="project-img mb-3">
            <% if project.image.attached? %>
                <%= link_to project do %>
                    <%= image_tag project.image, width: '100%', height: '300px' %>
                <% end %>
            <% else %>
                <%= link_to project do %>
                    <%= image_tag 'default-image.jpg', class: "img-fluid" %>
                <% end %>
            <% end %>
        </div>
        <div class="px-2">
            <h5 class="project-name"><%= link_to project.name, project, class: "text-dark text-decoration-none" %></h5>
            <div class="project-tags">
                <% project.tags.each do |tag| %>
                    <%= link_to tag.name, tag, class: "btn btn-outline btn-sm text-sm mb-2" %>
                <% end %>
            </div>
            <p class="project-copy text-sm text-justify"><%= project.description.to_plain_text.truncate(100) %></p>
            <div class="mt-3">
                <% if project.preview_link.present? %>
                    <%= link_to project.preview_link, class: "btn btn-light border-dark me-2 btn-sm" do %>
                        <i class="bi bi-box-arrow-up-right"></i>
                        Preview
                    <% end %>
                <% end %>
                <%= link_to project.github_link, class: "btn btn-colour-1 rounded me-2 btn-sm" do %>
                    <i class="bi bi-github"></i>
                    Github
                <% end %>
            </div>
        </div>
    </div>
</div>